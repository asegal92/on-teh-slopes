  <style>
  * {
      text-align: center;
      margin: 10px 0;
    }
    input[type=submit] {
      background: #fcf8f8;
        border: none;
        padding: 15px 30px;
        text-decoration: none;
        cursor: pointer;
      }
      .btn {
        padding: 15px 30px;
      }
      .a {
        color:black;
      }
  </style>  
  <head>
  <title>Trails App</title>
</head>
<body>
  <div class="container">
  <h1>Trails Page</h1>
  <nav>
    <a style="text-decoration: none" href="/trails/new">Create a New Trail</a>
  </nav>
  <%- include('./partials/nav.ejs') %>
  <ul>
    <% for(let i = 0; i < trails.length; i++){ %>
      <table>
        <tr>
        The <a href="/trails/<%=trails[i]._id%>"><%=trails[i].name%> trail</a>
     </br>
        <!-- <% if(trails[i].open === true){ %>
          trail is open
        <% } else { %>
          trail is not open
        <% } %>
         -->
        <div class="container" style="background-color:#fcf8f8">
        <form action="/trails/<%=trails[i]._id%>?_method=DELETE" method="POST">
          <input type="submit" value="Delete" />
        </form>
        <button type="button" class="btn">
        <a style="color: black ; text-decoration: none" href="/trails/<%=trails[i]._id%>/edit">Edit</a></button></div>
    <% } %>
    </tr>
    </table>
  </ul>  
</div>
</body>
